<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    xsi="http://www.w3.org/2001/XMLSchema-instance" 
    schemalocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
        http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
        version="2.0">

    <portlet>
        <portlet-name>FunctionalTestsPortlet</portlet-name>
        <display-name xml:lang="en">Functional Tests Portlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/testPortletContext.xml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
            <portlet-mode>ABOUT</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>Functional Tests Portlet</title>
            <short-title>Functional Tests</short-title>
            <keywords>Functional Tests</keywords>
        </portlet-info>
        
        
        <security-role-ref>
            <role-name>Everyone</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>EveryoneLink</role-name>
            <role-link>local.0</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>AllUsersPAGS</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>AllUsersPAGSlink</role-name>
            <role-link>pags.all_users</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>PortalAdministrators</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>PortalAdministratorslink</role-name>
            <role-link>local.2</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>Developers</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>Guests</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>UnDefinedInPortal</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>UnDefinedInPortallink</role-name>
            <role-link>local.UnDefinedInPortal</role-link>
        </security-role-ref>
    </portlet>
    
    <portlet>
        <portlet-name>ResourceServingPortlet</portlet-name>
        <display-name xml:lang="en">Resource Serving Portlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/resourceServingPortletContext.xml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>application/json</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>Resource Serving Portlet</title>
            <short-title>Resource Serving Portlet</short-title>
            <keywords>Functional Tests</keywords>
        </portlet-info>
        
        
        <security-role-ref>
            <role-name>Everyone</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>EveryoneLink</role-name>
            <role-link>local.0</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>AllUsersPAGS</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>AllUsersPAGSlink</role-name>
            <role-link>pags.all_users</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>PortalAdministrators</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>PortalAdministratorslink</role-name>
            <role-link>local.2</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>Developers</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>Guests</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>UnDefinedInPortal</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>UnDefinedInPortallink</role-name>
            <role-link>local.UnDefinedInPortal</role-link>
        </security-role-ref>
        
    </portlet>
    
    <portlet>
        <portlet-name>Events Test Portlet</portlet-name>
        <display-name xml:lang="en">Events Test Portlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/eventsPortletContext.xml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>Events Test Portlet</title>
            <short-title>Events Test</short-title>
            <keywords>Events Test</keywords>
        </portlet-info>
        
        <supported-processing-event>
            <name>SimpleTestEvent</name>
        </supported-processing-event>
        <supported-processing-event>
            <name>EndlessTestEvent</name>
        </supported-processing-event>
        
        <supported-publishing-event>
            <name>SimpleTestEvent</name>
        </supported-publishing-event>
        <supported-publishing-event>
            <name>EndlessTestEvent</name>
        </supported-publishing-event>
    </portlet>
    
    <portlet>
        <portlet-name>HeaderTestPortlet</portlet-name>
        <display-name xml:lang="en">Header Test Portlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/headerTestPortletContext.xml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>Header Test Portlet</title>
            <short-title>Header Test Portlet</short-title>
            <keywords>Functional Tests</keywords>
        </portlet-info>
        
        
        <security-role-ref>
            <role-name>Everyone</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>EveryoneLink</role-name>
            <role-link>local.0</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>AllUsersPAGS</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>AllUsersPAGSlink</role-name>
            <role-link>pags.all_users</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>PortalAdministrators</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>PortalAdministratorslink</role-name>
            <role-link>local.2</role-link>
        </security-role-ref>
        
        <security-role-ref>
            <role-name>Developers</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>Guests</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>UnDefinedInPortal</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>UnDefinedInPortallink</role-name>
            <role-link>local.UnDefinedInPortal</role-link>
        </security-role-ref>
        
        <container-runtime-option>
        	<name>javax.portlet.renderHeaders</name>
        	<value>true</value>
    	</container-runtime-option>
    </portlet>
    
    <custom-portlet-mode>
        <portlet-mode>ABOUT</portlet-mode>
    </custom-portlet-mode>
    <custom-portlet-mode>
        <portlet-mode>CONFIG</portlet-mode>
    </custom-portlet-mode>
    <custom-portlet-mode>
        <portlet-mode>PREVIEW</portlet-mode>
    </custom-portlet-mode>
    
    <custom-window-state>
        <window-state>EXCLUSIVE</window-state>
    </custom-window-state>
    <custom-window-state>
        <window-state>DETACHED</window-state>
    </custom-window-state>
    
    <!-- Use maven groupId + artifactId as default namespace -->
    <default-namespace>org.jasig.portlet.FunctionalTestsPortlet</default-namespace>
    
    <event-definition>
        <description>Event used for basic testing</description>
        <name>SimpleTestEvent</name>
        <value-type>java.util.Date</value-type>
    </event-definition>
    <event-definition>
        <description>Event used for failure handling testing</description>
        <name>EndlessTestEvent</name>
        <value-type>java.lang.Long</value-type>
    </event-definition>
    
    <container-runtime-option>
        <name>javax.portlet.escapeXml</name>
        <value>false</value>
    </container-runtime-option>
    
    
    
</portlet-app>